.selected {
    background-color: #CFD8DC !important;
    color: white;
}

.heroes {
    font-size: 2em;
    margin: 0 0 0em 0;
    list-style-type: none;
    padding: 0;
    width: 18em;
    li {
        cursor: pointer;
        position: relative;
        left: 0;
        background-color: #EEE;
        margin: .5em;
        padding: .3em 0;
        height: 2.1em;
        border-radius: 4px;
        &.selected {
            &:hover {
                background-color: #BBD8DC !important;
                color: white;
            }
        }
        &:hover {
            color: #607D8B;
            background-color: #DDD;
            left: .05em;
        }
    }
    .text {
        position: relative;
        top: -3px;
    }
    .badge {
        display: inline-block;
        font-size: small;
        color: white;
        padding: 0.8em 0.7em 0 0.7em;
        background-color: #607D8B;
        line-height: 1em;
        position: relative;
        left: -1px;
        top: -7px;
        height: 3.2em;
        margin-right: .8em;
        border-radius: 4px 0 0 4px;
    }
}

button {
    &.delete {
        height: 1.4em;
        float: right;
        position: relative;
        top: -2px;
        margin-top: 2px;
        margin-right: .5em;
        margin-bottom: 4px;
        background-color: gray !important;
        color: white;
    }
}
